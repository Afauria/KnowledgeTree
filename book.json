{
  "title": "Day Day Up",
  "author": "Afauria",
  "description": "好好学习，天天向上",
  "language": "zh-hans",
  "root": "src",
  "styles": {
    "website": "./styles/website.css"
  },
  "structure": {
    "readme": "README.md"
  },
  "links": {
    "sidebar": {
    }
  },
  "variables": {
    "hello": "everyone",
    "themeLou": {
      "nav": [
        {
          "target": "_self",
          "url": "/",
          "name": "首页"
        },
        {
          "target": "_self",
          "url": "/GUIDE.html",
          "name": "使用说明"
        },
        {
          "target": "_blank",
          "url": "https://afauria.github.io",
          "name": "我的博客"
        },
        {
          "target": "_blank",
          "url": "https://github.com/Afauria",
          "name": "GitHub"
        }
      ],
      "footer": {
        "donate": {
          "button": "赞赏",
          "avatar": "./static/avatar.png",
          "nickname": "Afauria",
          "message": "随意打赏，但不要超过一顿早餐钱！",
          "text": "『 欢迎加V 🌹 互相学习 』",
          "wxpay": "./static/wx_pay.jpg",
          "alipay": "./static/ali_pay.jpg"
        },
        "copyright": true
      }
    }
  },
  "plugins": [
    "theme-lou",
    "-sharing",
    "splitter",
    "expandable-chapters-small",
    "anchors",
    "github",
    "github-buttons",
    "sharing-plus",
    "favicon",
    "lightbox",
    "prism",
    "prism-themes",
    "mermaid-gb3",
    "back-to-top-button",
    "copy-code-button"
  ],
  "pluginsConfig": {
    "theme-lou": {
      "color": "#FF4848",
      "favicon": "./src/static/favicon.ico",
      "logo": "./src/static/logo.png",
      "appleTouchIconPrecomposed152": "./src/static/avatar.png",
      "copyrightLogo": "./src/static/copyright.png",
      "forbidCopy": false,
      "search-placeholder": "搜索",
      "book-summary-title": "好好学习，天天向上",
      "book-anchor-title": "大纲",
      "hide-elements": [".summary .gitbook-link", ".summary .divider", ".summary>:first-child", ".summary>:nth-child(2)"],
      "copyright": {
        "author": "Afauria"
      }
    },
    "github": {
      "//": "右上角添加github图标",
      "url": "https://github.com/Afauria",
      "size": "large"
    },
    "github-buttons": {
      "buttons": [
        {
          "user": "Afauria",
          "repo": "KnowledgeTree",
          "type": "star",
          "size": "large",
          "count": true
        }
      ]
    },
    "sharing": {
      "//": "true表示直接显示在顶端，all表示点击分享符号展开的",
      "douban": false,
      "facebook": false,
      "google": false,
      "hatenaBookmark": false,
      "instapaper": false,
      "line": false,
      "linkedin": false,
      "messenger": false,
      "pocket": false,
      "qq": false,
      "qzone": false,
      "stumbleupon": false,
      "twitter": false,
      "viber": false,
      "vk": false,
      "weibo": false,
      "whatsapp": false,
      "all": [
        "google",
        "facebook",
        "weibo",
        "twitter",
        "qq",
        "qzone",
        "linkedin",
        "pocket"
      ]
    },
    "prism": {
      "css": [
        "prism-themes/themes/prism-xonokai.css"
      ]
    },
    "favicon": {
      "shortcut": "./static/favicon.jpg",
      "bookmark": "./static/favicon.jpg",
      "appleTouch": "./static/favicon.jpg",
      "appleTouchMore": {
        "120x120": "./static/favicon.jpg",
        "180x180": "./static/favicon.jpg"
      }
    }
  }
}